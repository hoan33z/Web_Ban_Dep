    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Hóa Đơn</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IDHD)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IDSP)
            </th>
