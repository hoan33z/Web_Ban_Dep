@model IEnumerable<Assignment_C_4.Models.HoaDonChiTiet>

@{
    ViewData["Title"] = "DetailHD";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Chi Tiết Hóa Đơn</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IDHD)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IDSP)
            </th>
            <th>
                Số Lượng
            </th>
            <th>
                Giá
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IDHD)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IDSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gia)
            </td>
        </tr>
}
    </tbody>
</table>
